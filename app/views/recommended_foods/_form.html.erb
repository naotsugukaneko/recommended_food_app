<%= form_with model: @recommended_food, local: true do |form| %>
  <div>
    <p>料理名<%= form.text_field :name, required: true %></p>
    <p><%= form.file_field :image, accept: "image/png,image/jpeg,image/gif" %></p>
    <p>コメント<%= form.text_area :comment %></p>
    <p><%= form.submit "送信" %></p>
  </div>
<% end %>